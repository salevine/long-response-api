  "paths": {
    "/api/testResponseTime": {
      "get": {
        "summary": "Test response time (GET)",
        "description": "Wait for a specified time in milliseconds before responding",
        "operationId": "testResponseTimeGet",
        "parameters": [
          {
            "name": "testTime",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 0,
              "maximum": 300000
            },
            "description": "Time to wait in milliseconds (0 - 300000)"
          }
        ],
        "responses": {
          "200": {
            "description": "Success - Wait time completed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Wait Time Reached: 2000"
                    },
                    "requestedWaitMs": {
                      "type": "integer",
                      "example": 2000
                    },
                    "startTime": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2024-01-15T10:30:00.000Z"
                    },
                    "endTime": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2024-01-15T10:30:02.005Z"
                    },
                    "elapsedMs": {
                      "type": "integer",
                      "example": 2005
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - Missing or invalid testTime parameter"
          },
          "405": {
            "description": "Method Not Allowed"
          }
        }
      },
